    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    width: 300px;
    height: 500px;
    cursor: pointer;
}


/* Content inside the card */
.card-content {
    padding: 20px;
    text-align: center;
}


/* Animation on hover */
.card:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}


/* Button inside the card */
.card button {
    margin-top: 10px;
    padding: 10px 20px;
    background-color: #0a6d75;
    color: #ffffff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
}

/* Button hover effect */
.card button:hover {
