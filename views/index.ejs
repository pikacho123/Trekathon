}

/* Button hover effect */
.card button:hover {
    background-color: #005757;
}

/* Footer styling */
footer {
    background-color: #0a6d75;
    color: #ffffff;
    text-align: center;
    padding: 20px 0;
}

.footer-container {
    display: flex;
    justify-content: space-around;
    padding: 20px 0;
}

.footer-section {
