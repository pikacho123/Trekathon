        <% reviews.slice(0, 3).forEach(function(review) { %>
            <div class="review-card">
                <h3><%= review.username %></h3>
                <h3><%= review.tripName %></h3>
                <p class="rating">
                    <% for (let i = 1; i <= 5; i++) { %>
                        <i class="fa-star <%= i <= review.rating ? 'fas' : 'far' %>"></i>
                    <% } %>
                </p>
                <p>"<%= review.comment %>"</p>
            </div>
        <% }); %>
    </div>

    <!-- See More Button -->
    <% if (reviews.length > 3) { %>
        <!-- <button id="seeMoreButton" class="btn">See More</button> -->
    <% } %>

    <!-- Additional reviews to be shown when "See More" is clicked -->
    <div id="moreReviews" style="display: none;">
        <% reviews.slice(3, 10).forEach(function(review) { %>
            <div class="review-card">
                <h3><%= review.username %></h3>
                <h3><%= review.tripName %></h3>
                <p class="rating">
                    <% for (let i = 1; i <= 5; i++) { %>
                        <i class="fa-star <%= i <= review.rating ? 'fas' : 'far' %>"></i>
                    <% } %>
                </p>
                <p>"<%= review.comment %>"</p>
            </div>
        <% }); %>
    </div>
</section>

