    font-size: 14px;
    color: #fff;
    background-color: #222;
    padding: 10px 0;
}

/* Responsive Design */
@media (max-width: 768px) {
    .header-container, .auth-buttons {
        flex-direction: column;
        align-items: center;
    }

    .destination {
        width: 100%;
    }
}

