        /* Team section styling */
        .team-section {
            padding: 50px 20px;
            text-align: center;
        }

        .team-section h2 {
            font-size: 30px;
            margin-bottom: 20px;
            color: #007575; /* Teal */
        }

        .team-member {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            margin: 20px;
            text-align: center;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

        .team-member img {
            width: 150px; /* Set a fixed width for member photos */
            height: 150px; /* Set a fixed height for member photos */
            border-radius: 50%; /* Circular shape */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .team-member h3 {
            margin: 10px;
            color: #006666;
        }

        .team-member p {
            margin: 10px;
            color: #555;
        }

        .team-member:hover img {
            transform: scale(1.1); /* Slightly zoom in on hover */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

        .team-member:hover {
            transform: translateY(-10px); /* Lift up on hover */
        }

        /* Footer styling */
        footer {
